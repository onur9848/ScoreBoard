<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/game"
        android:contentDescription="@string/home_image_description"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/new_game_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        style="@style/Widget.Material3.Button"
        android:textSize="20sp"
        android:paddingVertical="@dimen/spacing_small"
        android:id="@+id/new_game_button"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="289dp"
        android:text="@string/yeni_skor_tablosu"
        android:contentDescription="@string/new_game_button_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/old_game_button"
        style="@style/Widget.Material3.Button"
        android:text="@string/eski_oyunlar"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/spacing_small"
        android:textSize="20sp"
        android:contentDescription="@string/old_games_button_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_game_button" />


</androidx.constraintlayout.widget.ConstraintLayout>
